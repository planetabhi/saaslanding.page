---
interface Props {
    title: string
}

const { title } = Astro.props
---

<h3 id={title.toLowerCase()} class="section-title">{title}</h3>

<style>
    .section-title {
        font-size: 13px;
        color: var(--text-primary-light);
    }

    @media (prefers-color-scheme: dark) {
        .section-title {
            color: var(--text-primary-dark);
        }
    }
</style>