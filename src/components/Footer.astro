---
import { persona } from "../persona";
import Link from "./Link.astro";
---

<footer class="footer">
  <p class="footer-content">
    {
      persona.contacts.map((c) => (
      <span class="footer-link"><Link target="_blank" title={c.title} url={c.url} /></span>
      ))
    }
  </p>
</footer>

<style>
    .footer {
        margin-top: 1rem;
    }
</style>
